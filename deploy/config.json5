{
  agents: {
    defaults: {
      cliBackends: {
        // Viewster 서브에이전트용 (Max 20x 계정)
        "claude-viewster": {
          command: "claude-viewster",
          args: ["-p", "--output-format", "json", "--dangerously-skip-permissions"],
          resumeArgs: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--resume", "{sessionId}"],
          output: "json",
          input: "arg",
          modelArg: "--model",
          systemPromptArg: "--append-system-prompt",
          systemPromptWhen: "first",
          sessionArg: "--session-id",
          sessionMode: "always"
        },
        // Gary 서브에이전트용 + PM 본체 (Max 5x 계정)
        "claude-gary": {
          command: "claude-gary",
          args: ["-p", "--output-format", "json", "--dangerously-skip-permissions"],
          resumeArgs: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--resume", "{sessionId}"],
          output: "json",
          input: "arg",
          modelArg: "--model",
          systemPromptArg: "--append-system-prompt",
          systemPromptWhen: "first",
          sessionArg: "--session-id",
          sessionMode: "always"
        }
      }
    },

    list: [
      {
        id: "pm",
        name: "PM",
        workspace: "/data/agents/pm/workspace",
        model: {
          primary: "claude-gary/claude-sonnet-4-6"
        }
      }
    ]
  },

  channels: {
    telegram: {
      accounts: {
        default: {
          dmPolicy: "allowlist",
          allowFrom: ["tg:8007983585"],
          groups: {
            "*": { requireMention: true }
          }
        }
      }
    }
  },

  bindings: [
    { agentId: "pm", match: { channel: "telegram", accountId: "default" } }
  ]
}
