{
  agents: {
    defaults: {
      cliBackends: {
        // Viewster 서브에이전트용 (Max 20x 계정)
        "claude-viewster": {
          command: "claude-viewster",
          args: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--tools", "default"],
          resumeArgs: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--tools", "default", "--resume", "{sessionId}"],
          output: "json",
          input: "arg",
          modelArg: "--model",
          systemPromptArg: "--append-system-prompt",
          systemPromptWhen: "first",
          sessionArg: "--session-id",
          sessionMode: "always",
          reliability: { watchdog: {
            fresh:  { noOutputTimeoutMs: 600000 },
            resume: { noOutputTimeoutMs: 600000 }
          }}
        },
        // Gary 서브에이전트용 + PM 본체 (Max 5x 계정)
        "claude-gary": {
          command: "claude-gary",
          args: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--tools", "default"],
          resumeArgs: ["-p", "--output-format", "json", "--dangerously-skip-permissions", "--tools", "default", "--resume", "{sessionId}"],
          output: "json",
          input: "arg",
          modelArg: "--model",
          systemPromptArg: "--append-system-prompt",
          systemPromptWhen: "first",
          sessionArg: "--session-id",
          sessionMode: "always",
          reliability: { watchdog: {
            fresh:  { noOutputTimeoutMs: 600000 },
            resume: { noOutputTimeoutMs: 600000 }
          }}
        }
      }
    },

    list: [
      {
        id: "pm",
        name: "시윤",
        workspace: "/data/agents/pm/workspace",
        agentDir: "/data/agents/pm/agent",
        model: {
          primary: "claude-gary/claude-sonnet-4-6",
          fallbacks: []
        }
      },
      {
        id: "viewster-pm",
        name: "준서",
        workspace: "/data/agents/viewster-pm/workspace",
        agentDir: "/data/agents/viewster-pm/agent",
        model: {
          primary: "claude-viewster/claude-sonnet-4-6",
          fallbacks: []
        }
      },
      {
        id: "gary-pm",
        name: "도윤",
        workspace: "/data/agents/gary-pm/workspace",
        agentDir: "/data/agents/gary-pm/agent",
        model: {
          primary: "claude-gary/claude-sonnet-4-6",
          fallbacks: []
        }
      }
    ]
  },

  channels: {
    telegram: {
      accounts: {
        default: {
          dmPolicy: "allowlist",
          allowFrom: ["tg:8007983585"],
          groups: {
            "*": { requireMention: true }
          }
        }
      }
    }
  },

  bindings: [
    { agentId: "pm", match: { channel: "telegram", accountId: "default" } }
  ]
}
